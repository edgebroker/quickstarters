{
  "project": "wekan",
  "services": [
    {
      "id": "frontend",
      "apps": [
        {
          "id": "meteor",
          "domain": {
            "uri": "$URI"
          },
          "mem": 512,
          "image": "wekanteam/wekan:v4.53",
          "instances": 1,
          "port_mappings": [
            {
              "container_port": 8080
            }
          ],
          "env": {
            "MONGO_URL": "mongodb://mongodb.backend.wekan/wekan",
            "ROOT_URL": "https://$URI"
          },
          "dependencies": [
            "../backend/mongodb"
          ]
        }
      ]
    },
    {
      "id": "backend",
      "apps": [
        {
          "id": "mongodb",
          "mem": 512,
          "image": "mongo:4.4.1-bionic",
          "cmd": "mongod --smallfiles --oplogSize 128 --bind_ip_all",
          "instances": 1,
          "volumes": [
            {
              "container_path": "/data/db",
              "size": "8GB"
            },
            {
              "container_path": "/data/configdb",
              "size": "8GB"
            }
          ]
        }
      ]
    }
  ]
}
